{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ASPNETCORE_ENVIRONMENT": "Development",
  "ASPNETCORE_URLS": "http://localhost:5000;https://localhost:5001",
  
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "image_viewer_local"
  },
  
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  
  "JWT": {
    "SecretKey": "your-super-secret-jwt-key-for-local-development-must-be-at-least-32-characters-long",
    "Issuer": "ImageViewer-Local",
    "Audience": "ImageViewer-Local-Users",
    "ExpirationMinutes": 60
  },
  
  "FileStorage": {
    "BasePath": "D:\\ImageViewerData",
    "WindowsDrives": {
      "D": "D:\\",
      "I": "I:\\",
      "J": "J:\\",
      "K": "K:\\",
      "L": "L:\\"
    },
    "MaxFileSize": 104857600,
    "AllowedExtensions": "jpg,jpeg,png,gif,bmp,webp,mp4,avi,mov,wmv"
  },
  
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "MaxSize": 1000
  },
  
  "Performance": {
    "MaxConcurrentRequests": 100,
    "RequestTimeoutSeconds": 30
  },
  
  "Security": {
    "EnableTwoFactor": true,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "PasswordMinLength": 8
  },
  
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "FromAddress": "noreply@imageviewer.local",
    "FromName": "ImageViewer Local"
  },
  
  "CDN": {
    "Provider": "Local",
    "Endpoint": "localhost",
    "AccessKey": "",
    "SecretKey": "",
    "Region": "local",
    "Bucket": "imageviewer-assets"
  },
  
  "Monitoring": {
    "EnableMetrics": true,
    "MetricsIntervalSeconds": 30,
    "HealthCheckIntervalSeconds": 60
  }
}
